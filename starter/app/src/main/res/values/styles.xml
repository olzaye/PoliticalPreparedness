<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="launchButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TextView.16.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TextView.24.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="TextView.18.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="Button.16" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>
</resources>
